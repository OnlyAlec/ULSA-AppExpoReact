{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/components/*"],
      "@context/*": ["./src/context/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
